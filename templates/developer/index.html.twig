
{% block title %}Developer index{% endblock %}

{% block body %}
    <div class="">
        <h1>Developer index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th >Id</th>
                    <th>Name</th>
                    <th>SurName</th>
                    <th>MiddleName</th>
                    <th>JobTitle</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    <th>Project</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for developer in developers %}
                <tr>
                    <td>{{ developer.id }}</td>
                    <td>{{ developer.name }}</td>
                    <td>{{ developer.surName }}</td>
                    <td>{{ developer.middleName }}</td>
                    <td>{{ developer.jobTitle }}</td>
                    <td>{{ developer.email }}</td>
                    <td>{{ developer.phoneNumber }}</td>
                    <td>{{ developer.project }}</td>
                    <td>
                        <a href="{{ path('app_developer_show', {'id': developer.id}) }}">show</a>
                        <a href="{{ path('app_developer_edit', {'id': developer.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_developer_new') }}">Create new</a>
        <a href="{{ path('app_project_index')}}">Projects</a>
    </div>
{% endblock %}
